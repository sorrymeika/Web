@{
    var data = SL.Data.SQL.Query("select LessonID,LessonName,Cover,Description,Sort from Lesson order by Sort desc");
    if (data != null)
    {
        data.All(a =>
        {
            a.Cover = SL.Util.RequestFile.FullUrl(a.Cover);
            return true;
        });
    }

    ViewBag.Title = "课程介绍";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="headerwrap">
    <div style="width:100%;background: url(@Url.Content("~/Theme/Images/Lessons.jpg")) no-repeat center center;height:542px; position:absolute; "></div>
    @Html.Partial("_Header", "lessons")
</div>
<div class="main">
    @if (data != null && data.Count != 0)
    {
        var item = data.FirstOrDefault();
        <div class="lesson_info clearfix">
            <div class="img"><img src="@item.Cover" />
            </div>
            <div class="info">
                <p class="name">asdfasdf</p>
                <p class="con">asdfasf</p>
                <p class="action"><input class="btn js_start" type="button" value="立即预约"></p>
            </div>
        </div>
    }
    <div class="lesson_list">
        @if (data == null || data.Count == 0)
        {
            <text><div style="padding: 50px; text-align: center;">暂无课程</div></text>
        }
        else
        {
            <ul>
                @foreach (var item in data)
                {
                    <li>
                        <p class="img"><img src="@item.Cover" /></p>
                        <p class="name">@(new MvcHtmlString(item.Title))</p>
                        <p class="con">@(new MvcHtmlString(item.Description))</p>
                    </li>
                }
            </ul>
        }
    </div>
</div>
<script>
    seajs.use(['$'],function() {
    });
</script>
