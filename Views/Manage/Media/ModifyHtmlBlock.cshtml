@{
    ViewBag.Title = "";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}
@model AbsTouch.Models.HtmlBlockModel
@section header{
    <script type="text/javascript">
        resizePopup(650,460);

        $.ready(function () {
            var vld=new $.Validation([{
                id: "desc",
                emptyAble: false,
                emptyText: "请填写描述"
            },{
                id: "content",
                emptyAble: false,
                emptyText: "请填写正文"
            },{
                id: "sort",
                emptyAble: false,
                emptyText: "请填写排序",
                regex: /^\d+$/,
                regexText: "必须是数字"
            }]);
            $("form1").onsubmit=function () {
                return vld.validate();
            }
        });
    </script>
}
<h2>修改HTML块</h2>
<form id="form1" action="" method="post" enctype="multipart/form-data">
<input type="hidden" id="id" name="id" value="@(Model.ID)" />
<input type="hidden" id="name" name="name" value="@(Request.QueryString["name"])" />
<table class="form">
    <tr>
        <td><i>*</i>描述：</td>
        <td><input type="text" id="desc" name="desc" value="@(Model.Description)" /></td>
    </tr>
    <tr>
        <td><i>*</i>排序：</td>
        <td><input type="text" id="sort" name="sort"  value="@(Model.Sort)"/></td>
    </tr>
    <tr>
        <td valign="top"><i>*</i>内容：</td>
        <td><textarea id="content" name="content">@(Model.Content)</textarea></td>
    </tr>
    <tr>
        <td colspan="2" class="buttons"><input type="submit" value="修改" class="button" />
            <input type="button" value="返回" class="button" onclick="window.location.href='/Manage/Media/HtmlBlocks/?name=@(Request.QueryString["name"])'" />
        </td>
    </tr>
</table>
</form>
